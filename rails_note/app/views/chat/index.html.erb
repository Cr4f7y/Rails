<link href="http://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<div id="228" class="col-md-12">

  <div class="container">

      <form id="input-form" action="/post" method="post">

        <div class="col-md-8 col-md-offset-2 form-group">
          <h2>Create New Note</h2>
           <input name='input-heading' id="input-heading" type="text" class="form-control" placeholder="Enter heading of your note" autofocus /><br>

          <textarea name='input-body' id="console" rows="8" style="width: 100%" placeholder="  Enter text of your note here" autocomplete="off"></textarea>


          <button class="btn btn-primary pull-right " type="submit">Post</button>
         </div>


        <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>

      </form>
      </div>

  <hr class="prettyline">

  <div class="container">
    <div class="row">


      <div class="col-md-12">
        <h4>Notes Table</h4>
        <div class="table-responsive">


          <table id="mytable" class="table table-bordred table-striped">

            <thead>
            <th> </th>
            <th>ID</th>
            <th>Heading</th>
            <th>Body</th>
            <th>Edit</th>
            <th>Delete</th>
            </thead>
            <tbody>
            <% if @notes != nil %>
                <%for @notes in @notes%>
                    <%= @notes%>
                <%end%>
            <%end%>

            </tbody>

          </table>

           </div>

      </div>
    </div>
  </div>


  <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
          <h4 class="modal-title custom_align" id="Heading">Edit Your Note</h4>
        </div>
        <form action="/change" method="post">
        <div class="modal-body">
          <div class="form-group">
            <input name="input-id" id="input-id" class="form-control " type="hidden" placeholder="ID" readonly>
          </div>
          <div class="form-group">

            <input name="heading" id="heading" class="form-control " type="text" placeholder="New heading">
          </div>
          <div class="form-group">
            <textarea name="body" rows="2" class="form-control" placeholder="New body"></textarea>
          </div>
        </div>
        <div class="modal-footer ">
          <button type="submit" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span>Update</button>
        </div>
          <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
        </form>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>



  <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
          <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
        </div>
        <form action="/delete" method="post">
            <div class="modal-body">

              <div class="alert alert-warning"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Record?</div>

            </div>
            <div class="modal-footer ">
              <input type="hidden" name="delete-id" id="delete-id" value=""/>
              <button type="submit"  class="btn btn-warning" ><span class="glyphicon glyphicon-ok-sign"></span>Yes</button>
              <button type="button" class="btn btn-warning"  data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>No</button>
            </div>
          <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
        </form>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>

  </div>


