<% provide(:title, @user.name) %>
<div class="container-fluid" id="Profile">
  <div class="row">

    <div class="col-xs-6">
      <%= gravatar_for @user %>
      <%= @user.name %>
    </div>

    <div class="col-xs-6">
           <% if @user.microposts.any? %>
          <h3>Microposts (<%= @user.microposts.count %>)</h3>
          <ol class="microposts">
            <%= render @microposts %>
          </ol>
          <%= will_paginate @microposts %>
      <% end %>

    </div>
  </div>
</div>