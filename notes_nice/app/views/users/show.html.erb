<% provide(:title, @user.name) %>
<div class="container">
      <div class="col-md-6">
        <%= gravatar_for @user %>
        <%= @user.name %>
      </div>
  <div class="col-md-6">
  <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
  <% end %>
  </div>
</div>